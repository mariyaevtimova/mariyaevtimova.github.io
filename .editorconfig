# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
max_line_length = 80
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf

[*.sh]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,styl,scss,less,sass}]
indent_size = 2

[*.{js,json, yml}]
indent_size = 2

[*.md]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false